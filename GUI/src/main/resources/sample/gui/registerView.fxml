<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.gui.RegisterController">

    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
    <center>
        <VBox alignment="CENTER" maxWidth="250.0" spacing="20.0">
            <HBox spacing="5.0">
                <TextField fx:id="firstNameTextField" promptText="First name" />
                <TextField fx:id="lastNameTextField" promptText="Last name" />
            </HBox>
            <TextField fx:id="loginTextField" promptText="Login" />
            <PasswordField fx:id="passwordTextField" promptText="Password" />
            <PasswordField fx:id="confirmPasswordTextField" promptText="Confirm password" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <Button fx:id="doneButton" onAction="#handleDoneButton" prefWidth="75.0" text="Done" />
            <Button fx:id="cancelButton" onAction="#handleCancelButton" prefWidth="75.0" text="Cancel" />
        </HBox>
    </bottom>
</BorderPane>
