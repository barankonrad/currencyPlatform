<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.gui.TransferController">
    <center>
        <GridPane hgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" prefWidth="75.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="165.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="60.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label prefWidth="Infinity" text="Your account" textAlignment="RIGHT" GridPane.hgrow="ALWAYS"/>
                <ChoiceBox fx:id="accountChoiceBox" prefWidth="Infinity" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="0"/>

                <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label alignment="CENTER_RIGHT" prefWidth="Infinity" text="Receiver" textAlignment="RIGHT"
                       GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="receiverChoiceBox" prefWidth="Infinity" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>

                <Label prefWidth="Infinity" text="Receiver's account" textAlignment="RIGHT" wrapText="true"
                       GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"/>
                <ChoiceBox fx:id="receiverAccountChoiceBox" prefWidth="Infinity" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"/>

                <Label alignment="CENTER_RIGHT" prefWidth="Infinity" text="Amount" GridPane.hgrow="ALWAYS"
                       GridPane.rowIndex="4"/>
                <Spinner fx:id="amountSpinner" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                         GridPane.rowIndex="4"/>

                <Label alignment="CENTER_RIGHT" prefWidth="Infinity" text="Title" GridPane.hgrow="ALWAYS"
                       GridPane.rowIndex="5"/>
                <TextField fx:id="titleTextField" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                           GridPane.rowIndex="5"/>
            </children>
            <BorderPane.margin>
                <Insets left="60.0" right="60.0"/>
            </BorderPane.margin>
        </GridPane>
    </center>
</BorderPane>
